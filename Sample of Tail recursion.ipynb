    "def sumtail(n,temp=0):\n",
    "    if n==0:\n",
    "        return temp\n",
    "    return sumtail(n-1,temp+n)\n",
    "num=int(input(\"Enter a number:\"))\n",
    "print(\"Sum:\",sumtail(num))"
   ]
